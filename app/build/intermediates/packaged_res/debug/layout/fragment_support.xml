<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                        
                                                                                     
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.ReferalActivity" android:tag="layout/fragment_support_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <include
            android:id="@+id/appbar"
            layout="@layout/app_bar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/appbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/round_card"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp20"
                    android:text="Hi ! How can i help you ?"
                    android:textColor="@color/app_color"
                    android:textSize="20sp" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="@dimen/dp200"
                    android:layout_height="@dimen/dp200"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/support" />


                <!--                <View-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="@dimen/dp20" />-->
                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="@string/raise"-->
                <!--                    android:textColor="@color/app_color"-->
                <!--                    android:textStyle="bold"-->
                <!--                    android:textSize="20sp"-->
                <!--                    android:layout_gravity="center"/>-->
                <!--                <View-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="@dimen/dp50" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/subject"

                        android:padding="@dimen/dp10"
                        android:singleLine="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/app_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="0.8dp"
                        android:background="@color/app_color" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp35" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/description"
                        android:padding="@dimen/dp10"
                        android:singleLine="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/app_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="0.8dp"
                        android:background="@color/app_color" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp20"
                    android:backgroundTint="@color/app_color"
                    android:text="Send"
                    android:textColor="@color/white"
                    app:cornerRadius="@dimen/dp10" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp50"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp10">


                <androidx.cardview.widget.CardView
                    android:id="@+id/whatsapp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp60"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/app_color"
                    android:backgroundTint="@color/white"
                    android:tag="binding_1"             
                    app:cardCornerRadius="@dimen/dp10"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/call"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="@dimen/dp24"
                        android:layout_height="@dimen/dp24"
                        android:layout_gravity="center"
                        app:tint="@color/app_color"
                        android:src="@drawable/ic_whatsapp"></ImageView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/call"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp60"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="@color/white"
                    android:tag="binding_2"         
                    app:cardCornerRadius="@dimen/dp10"
                    app:layout_constraintLeft_toRightOf="@+id/whatsapp"
                    app:layout_constraintRight_toLeftOf="@+id/email"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="@dimen/dp24"
                        android:layout_height="@dimen/dp24"
                        android:layout_gravity="center"
                        app:tint="@color/app_color"
                        android:src="@drawable/telephone"></ImageView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp60"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="@color/white"
                    android:tag="binding_3"          
                    app:cardCornerRadius="@dimen/dp10"
                    app:layout_constraintLeft_toRightOf="@+id/call"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="@dimen/dp24"
                        android:layout_height="@dimen/dp24"
                        android:layout_gravity="center"
                        app:tint="@color/app_color"
                        android:src="@drawable/mail"></ImageView>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
         